describe('Sum of numbers', () => {
    it("test with string returns NaN", function() {
        let actual = sum("abc");
        expect(actual).to.be.NaN;
    });
    it("test array of strings returns number", function() {
        let actual = sum(['1', '2']);
        expect(actual).to.be.equal(3);
    });
    it("expect sum([1, 2, 3]) as nums to be 6", function() {
        let expected = 6;
        let actual = sum([1, 2, 3]);
        expect(actual).to.be.equal(expected);
    });
});
